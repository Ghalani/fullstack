<div id="myRGnew" class="center-float">
  <div class="card">
    <div><h2>New Labourer</h2></div>
    <div>
      <%= form_for [@region, @sp], html: { multipart: true }, remote: true do |t|%>
        <div class="form-group">
          <%= t.label :image %>
          <%= t.file_field :image %>
        </div>
        <div class="form-group">
          <%= t.text_field :fname, size: '80', class:"form-control", placeholder:"first name" %>
        </div>
        <div class="form-group">
          <%= t.text_field :lname, size: '80', class:"form-control", placeholder:"last name" %>
        </div>
        <div class="form-group">
          <%= t.text_field :phone, size: '80', class:"form-control", placeholder:"phone" %>
        </div>
        <div class="form-group">
          <%= t.text_field :gender, size: '80', class:"form-control", placeholder:"gender" %>
        </div>
        <div id="form-error"></div>
        <div id="err-msg"></div>
        <div class="form-group">
          <%= t.submit 'Submit' , class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
