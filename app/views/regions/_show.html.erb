<div>
  <h3>Farms under <%= @region.name %></h3>
</div>
<div class="row">
  <div class="col-md-6 row">
    <% @farms.each do |f| %>
    <div class="col-md-3 col-sm-4">
      <%= link_to  organization_farm_path(f.region.organization.id, f) do %>
      <div class="card">
        <%= f.name %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= render 'weather_card' %>
  </div>
</div>
