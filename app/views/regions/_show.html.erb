<br>
<div class="row">
  <div class="col-md-6">
    <div class="portlet hcenter">
      <div class="portlet-heading bg-inverse">
          <h3 class="portlet-title">Farms under <%= @region.name %></h3>
          <div class="portlet-widgets"></div>
          <div class="clearfix"></div>
      </div>
      <div class="pad15">
        <% if @farms && @farms.size > 0 %>
          <% @farms.each do |f| %>
            <%= link_to  organization_farm_path(f.region.organization.id, f) do %>
              <div class="list-item">
                <%= f.name %>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <h3>This region (<%= @region.name %>) has no farms</h3><br>
        <% end %>
        <%= link_to 'Add',  new_manager_farm_path(@manager), class:"btn btn-primary", remote: true %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="portlet">
      <div class="portlet-heading bg-inverse">
          <h3 class="portlet-title">Labourers in region</h3>
          <div class="portlet-widgets"></div>
          <div class="clearfix"></div>
      </div>
      <div class="pad15">
        <% if @sps && @sps.size > 0 %>
          <% @sps.each do |sp| %>
            <%= link_to  region_service_provider_path(sp.region, sp), remote: true do %>
              <div class="list-item">
                <%= sp.fl_name %>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <h3>This region (<%= @region.name %>) has no Labourer</h3><br>
        <% end %>
        <%= link_to 'Add', new_region_service_provider_path(@region), class:"btn btn-primary", remote:true %>
      </div>
    </div>

    <% render 'weather_card' %>
  </div>
</div>
