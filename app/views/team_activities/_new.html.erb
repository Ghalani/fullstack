<div class="w700 card hcenter">
  <h2><small>New Team Activity</small></h2>
  <div class="half-div row">
    <%= form_for [@region, @team_activity], remote: true do |t|%>
      <div class="col-md-6">
        <div class="form-group">
          <% if @activities && @activities.size > 0 %>
            <label>Activities</label><br>
            <%= t.collection_select :activity_id, @activities, :id,:name, include_blank: false, class:"form-control" %>
          <% else %>
            <h3>No activities available</h3><br>
            <%= link_to new_organization_activity_path(@region.organizations) %>
          <% end %>
        </div>
        <hr>
        <div class="form-group">
          <% if @teams && @teams.size > 0 %>
            <label>Teams</label><br>
            <%= t.collection_select :team_id, @teams, :id,:name, include_blank: false, class:"form-control" %>
          <% else %>
            <h3>No teams available</h3><br>
            <%= link_to new_organization_team_path(@region.organizations) %>
          <% end %>
        </div>
        <hr>
        <div class="form-group">
          <% if @farms && @farms.size > 0 %>
            <label>Activities</label><br>
            <%= t.collection_select :farm_id, @farms, :id,:name, include_blank: false, class:"form-control" %>
          <% else %>
            <h3>No activities available</h3><br>
            <%= link_to new_organization_activity_path(@region.organizations) %>
          <% end %>
        </div>
        <div class="form-group">
          <div class='input-group date' id='start-date'>
            <%= t.text_field :start_date, class:"form-control", placeholder:"Start date" %>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
        <div class="form-group">
          <div class='input-group date' id='end-date'>
            <%= t.text_field :end_date, class:"form-control", placeholder:"Start date" %>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label>Instructions</label> <br>
          <%= t.text_area :comment %>
        </div>
        <div id="err-msg">

        </div>
        <div class="form-group">
          <%= t.submit 'Submit' , class:"btn btn-primary" %>
        </div>
      </div>
      <!-- <div class="form-group">
        <label>Team Leader</label> | <%# t.collection_select :team_leader_id, @sps, :id, :user[:name], include_blank: false, class:"form-control" %>
      </div> -->
    <% end %>
  </div>
</div>
<script>
  //https://eonasdan.github.io/bootstrap-datetimepicker
  $(function () {
    $('#start-date, #end-date').datetimepicker({
      format: 'YYYY-MM-DD HH:mm'
    });
  });
</script>
