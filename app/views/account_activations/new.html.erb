<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
	<div class=" card-box">
    <div class="panel-heading">
      <div class="text-center"><%= image_tag 'logo', class:"w100" %></div>
        <h3 class="text-center"> Reset your password  </h3>
    </div>
    <div class="panel-body">
      <%= form_tag account_activations_path do %>
        <div class="form-group ">
            <div class="col-xs-12">
              <%= email_field_tag :email, "", class:"form-control", placeholder:"Enter your email", required: true %>
            </div>
        </div>

        <div class="form-group text-center m-t-40">
            <div class="col-xs-12">
              <%= submit_tag 'RESET', class:"btn btn-pink btn-block text-uppercase waves-effect waves-light" %>
            </div>
        </div>
  		<% end %>
    </div>
	</div>
</div>
