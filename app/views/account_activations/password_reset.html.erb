<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
	<div class=" card-box">
    <div class="panel-heading">
			<div class="text-center"><%= image_tag 'logo', class:"w100" %></div>
        <h3 class="text-center"> Reset</h3>
    </div>
    <div class="panel-body">
      <%= form_for @user, onsubmit:"return verPass();" do |u| %>
        <div class="form-group">
            <div class="col-xs-12">
              <%= u.password_field :password, class: "form-control", placeholder: 'New password', id:'pwd1', required: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12">
              <%= u.password_field :password_confirmation, class: "form-control", placeholder: 'Confirm password', required: true, id:'pwd2' %>
            </div>
        </div>

        <div class="form-group text-center m-t-40">
            <div class="col-xs-12">
              <%= u.submit 'RESET', onclick:"return verPass();", class:"btn btn-pink btn-block text-uppercase waves-effect waves-light" %>
            </div>
        </div>
				<%= u.hidden_field :activated, value:true %>
				<%= u.hidden_field :activated_at, value:"#{Time.now()}" %>

  		<% end %>
    </div>
    <div class="row">
    	<div class="col-sm-12 text-center">
    		<p>Already have account? <a href="/login" class="text-primary m-l-5"><b>Sign In</b></a></p>
      </div>
    </div>
	</div>
</div>
<script>
  function verPass() {
    var pass1 = $("#pwd1");
    var pass2 = $("#pwd2");
    var ok = true;
    if (pass1.val() != pass2.val()) {
        alert("Passwords do not match...");
        pass1.css("borderColor", "#E34234");
        pass2.css("borderColor", "#E34234");
        ok = false;
    }
    return ok;
  }
</script>
