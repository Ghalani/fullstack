<script>
  var descShowing = false;
  $(document).ready(function () {
    var menu = $('#nav1');
    var origOffsetY = 0;

    function scroll() {
      var screenBottom = ($(window).scrollTop() + $(window).height());
      var screenTop = $(window).scrollTop();

      if (($(window).scrollTop() > origOffsetY)) {
        if (!menu.hasClass('navbar-fixed-top')){
          menu.addClass('navbar-fixed-top');
        }
      } else if(menu.hasClass('navbar-fixed-top')) {
          menu.removeClass('navbar-fixed-top');
      }


      var items = $("#desc-items").children(); 
        //console.log("scroll");
      if(!descShowing && (screenBottom > ($("#about").position().top))){
        descShowing = true;
        //console.log("init");
        changeItem(0);

        // show desc
        // start carosel
        function changeItem(pos) {
          $(items.get((pos - 1) >= 0 ? (pos - 1) : 2)).removeClass('is-visible');
          $(items.get(pos)).addClass('is-visible');
          pos++;
          if (pos == items.length) {pos = 0}
          setTimeout(
            function() {
              changeItem(pos);
          }, 5000);
        };          
        //}
      }
    }
    document.onscroll = scroll;
  });
  
  function openModal(){
    addNav('<%= escape_javascript(render "subscribe_modal", locals: {reason:"demo"}) %>');
  }
  
  function downloadMK(){
    addNav('<%= escape_javascript(render "subscribe_modal", locals: {reason:"media-kit"}) %>');
  }
</script>