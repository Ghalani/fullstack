<p id="notice"><%= notice %></p>

<h1>Listing Activity Forms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_forms.each do |activity_form| %>
      <tr>
        <td><%= activity_form.name %></td>
        <td><%= link_to 'Show', activity_form %></td>
        <td><%= link_to 'Edit', edit_activity_form_path(activity_form) %></td>
        <td><%= link_to 'Destroy', activity_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

