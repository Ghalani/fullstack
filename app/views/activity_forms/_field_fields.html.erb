<fieldset>
  <div class="row">
    <div class="col-xs-4">
      <%= f.select :field_type, %w[text_field check_box] %>
    </div>
    <div class="col-xs-4">
      <%= f.text_field :name, placeholder: "field name" %>
    </div>
    <div class="col-xs-4">
      <%= f.check_box :required %> <%= f.label :required %>
    </div>
  </div>
  <%= link_to "[remove]", "#", class: "remove_fields" %>
  <%= f.hidden_field :_destroy %>
</fieldset>
