<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
	<div class=" card-box">
    <div class="panel-heading">
        <h3 class="text-center"> Sign In to <strong class="text-custom">Ghalani</strong> </h3>
    </div>
    <div class="panel-body">
      <%= form_tag sessions_path do %>
        <div class="form-group ">
            <div class="col-xs-12">
              <%= text_field_tag :email, "", class:"form-control", placeholder:"Email", required: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12">
              <%= password_field_tag :password,"", class: "form-control", placeholder:"Password", required: true %>
            </div>
        </div>

        <div class="form-group ">
            <div class="col-xs-12">
                <div class="checkbox checkbox-primary">
                    <input id="checkbox-signup" type="checkbox">
                    <label for="checkbox-signup">
                        Remember me
                    </label>
                </div>

            </div>
        </div>

        <div class="form-group text-center m-t-40">
            <div class="col-xs-12">
              <%= submit_tag 'Log in', class:"btn btn-pink btn-block text-uppercase waves-effect waves-light" %>
            </div>
        </div>

        <div class="form-group m-t-30 m-b-0">
            <div class="col-sm-12">
                <a href="/reset" class="text-dark"><i class="fa fa-lock m-r-5"></i> Forgot your password?</a>
            </div>
        </div>
  		<% end %>
    </div>
    <div class="row">
    	<div class="col-sm-12 text-center">
    		<p>Don't have an account? <a href="/signup" class="text-primary m-l-5"><b>Sign Up</b></a></p>
      </div>
    </div>
	</div>
</div>
