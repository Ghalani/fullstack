<fieldset>
  <div class="row">
    <div class="col-xs-4">
      <%= f.select :field_type, %w[text_field check_box] %>
    </div>
    <div class="col-xs-4">
      <%= f.text_field :name, class:"form-control", placeholder: "field name" %>
    </div>
    <div class="col-xs-4">
      <%= f.check_box :required %> <%= f.label :required %>
      <%= f.hidden_field :_destroy %>
      <%= link_to "#", class: "remove_fields" do %>
      <i class="fa fa-close"></i>
      <% end %>
    </div>
  </div>
</fieldset>
